<head>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>
<body>
	<div class ='container'>
		<div class ='topbar'><h1>Photos</h1></div>
		<div class='row'>
			<div>
				<% @picture.each do |p| %>
					<div class = 'col-xs-6 col-sm-4 col-md-3' > 
						<img src=" <%= p.avatar%> " class='img-rounded' alt="picture here" width='150px'><br><br>
					</div>
				<% end %>
			</div>
		</div>
		<br><br>
		<div class ='row'>
			<div class = 'col-xs-12'>
				<%= simple_form_for(:picture, :html => {:multipart => true, :class => 'form-horizontal'}, :defaults => {:input_html => {:class => 'form-control'} }) do |f| %>
				<%= f.hidden_field :user_id, :value => session[:user_id] %>
				<%= f.file_field :avatar, :class => 'btn btn-primary btn-lg btn-block'%> <br>
				<%= f.submit "Send to Photo Frame" , :class => 'btn btn-primary btn-lg btn-block'%> <br>
				<%end%>
				<a class='btn btn-warning btn-lg btn-block' href="/master">Back</a>
			</div>
		</div>
	</div>
</body>