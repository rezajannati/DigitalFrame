<h1>EDIT THIS SLIDESHOW!</h1>
<div class ='container'>
	<div class ='row'>
			<div class = 'col-xs-12'>
				<%= form_tag(url: "users/#{current_user.id}/slideshows/#{@slideshow.id}") do %>
					<input type="hidden"name="_method"value="put">
					<br>
					<%= label_tag "picture[name]", "name" %>
					<%= text_field_tag 'picture[name]' %><br>
					<%= collection_check_boxes(:picture, :picture_ids, @slideshow.pictures, :id, :avatar)  do |b| %>
						<label for="<%= b.object %>" >
							<img src="<%= b.text %>" width='150px'>
							<%= b.check_box %>
						</label>
					<% end %>
					<%= submit_tag "Update Slideshow", :class => 'btn btn-primary btn-lg btn-block' %><br>
				<% end %>
			
			</div>
	</div>
	<a class='btn btn-warning btn-lg btn-block' href="/master">Back</a>
</div>


