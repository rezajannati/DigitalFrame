<div class ='topbar'>
	<h1>Here are your pictures, <%= current_user.first_name %></h1>
</div>
<div class ='container'>
	<div>
		<div>
			<% @pictures.each do |p| %>
				<div style='display: inline-block; vertical-align: top;'> 
					<img src=" <%= p.avatar%> " alt="picture here" width='150px' height='150px'>
					<h3><%= p.name %></h3>
				</div>
			<% end %>
		</div>
	</div>
	<br><br>
	<div class ='row'>
			<div class = 'col-xs-12'>
				<%= simple_form_for([current_user, @picture], :html => {:multipart => true, :class => 'form-horizontal'}, :defaults => {:input_html => {:class => 'form-control'} }) do |f| %>
					<div id="images">
						<span class="btn btn-info btn-block btn-file">
							<span class='file_desc'> Select your file!</span>
    						<%= file_field_tag "images[][avatar]" %>
						</span>
				     </div>
				     <br>
					<button class="btn btn-success btn-block add"> add another file </button><br>
					<%= f.submit "Send to Photo Frame" , :class => 'btn btn-primary btn-block'%> <br>
				<%end%>
				<a class='btn btn-warning btn-block' href="/master">Back</a>
			</div>
	</div>
</div>

